@model Сleaning
@{
    ViewBag.Title = "Добавить уборку";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Работник @Html.DisplayFor(model => model.Employee.Name)  @Html.DisplayFor(model => model.Employee.Patronymic) @Html.DisplayFor(model => model.Employee.Surname) </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdEmployee)
        <div class="form-group">
            @Html.LabelFor(model => model.IdFloor, "Этаж", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-1">
                @Html.DropDownList("IdFloor", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdFloor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdDay, "День недели", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownList("IdDay", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDay, "", new { @class = "text-danger" })
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" value="Добавить" class="btn btn-default" />
                </div>
            </div>
            <div class="col-md-offset-2 col-md-1">
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
}