@model IEnumerable<Курсовая_ASP.NET.Employee>

@{
    ViewBag.Title = "Персонал";
}

<p class="btn btn-default dir-role">
    @Html.ActionLink("Принять работника", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
           Работник
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Patronymic)  @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.Id }, new { @class = "dir-role" }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id }) |
            @Html.ActionLink("Уволить", "Delete", new { id=item.Id }, new { @class = "dir-role" })
        </td>
    </tr>
}

</table>
